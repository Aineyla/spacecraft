body, html, canvas, ul, li {
    width: 100%;
    height: 100%;
}

body, html, canvas, ul, li, h2, h3, h4, #ctrl {
    margin: 0;
    padding: 0;
}

body, html {
    overflow: hidden;
    background-color: #000;
    color: #fff;
    font: bold 18px Arial, Helvetica, sans-serif;
    text-align: center;
}

#hud, #game, #planet, #ctrl {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}

#hud {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    top: 12px;

    & div {
        width: 100%;
    }

    & div:last-child {
        align-self: flex-end;
    }
}

ul {

    & > li {
        position: absolute;
        opacity: 1;
    }

    & > li.hide {
        opacity: 0;
        transition: opacity 1s;
    }

}

h2 {
    margin: 10px 0;
    font-size: 24px;
}

h3 {
    height: 40px;
    font-size: 20px;
}

h4 {
    line-height: 18px;
    font-size: 14px;

    &.title {
        line-height: 25px;
        font-size: 20px;
    }
}

#quest {
    padding: 15px 0;
    background: rgba(0, 0, 0, .7);
    opacity: 1;
    visibility: hidden;
}

#ctrl {
    display: flex;
    flex-wrap: wrap;
    align-items: flex-end;
    justify-content: center;

    & div {
        flex: 1 0 100%
    }
}

a {
    display: inline-block;
    width: 50px;
    line-height: 48px;
    color: #000;
    background: #ddd;
    border: 2px solid #333;
    border-radius: 25px;
    padding: 0 20px;
    margin: 20px 10px;
    cursor: pointer;
}

.end #ctrl,
.play #ctrl,
.play a {
    visibility: hidden;
}

.end #quest,
.play #quest {
    visibility: visible;
}

.play #quest {
    opacity: 0;
    transition: opacity 1s;
    transition-delay: 2.5s;
}

* {
	-webkit-tap-highlight-color: rgba(0, 0, 0, 0);
	-webkit-touch-callout: none;
	user-select: none;
}