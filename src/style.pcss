body, html, canvas {
    width: 100%;
    height: 100%;
    margin: 0;
    padding: 0;
}

body, html {
    overflow: hidden;
    background-color: #000;
    background-image: radial-gradient(circle at 50% 100%, #300, #510 50%, #630 60%, #003 61%, #000 80%);
    color: #0f0;
    font-size: 15px;
    font-weight: bold;
}

#hud {
    position: absolute;
    margin: 20px;
}